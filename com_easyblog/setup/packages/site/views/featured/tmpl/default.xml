<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_EASYBLOG_MENU_FEATURED_LAYOUT">
		<message>
			<![CDATA[COM_EASYBLOG_MENU_FEATURED_LAYOUT_DESC]]>
		</message>
	</layout>

	<fields name="params">
		<fieldset name="request" addfieldpath="/administrator/components/com_easyblog/elements">
			<field name="row_style" type="list" default="row" label="EB_POST_LISTING_STYLE" description="EB_POST_LISTING_STYLE_DESC">
				<option value="row">Rows</option>
				<option value="column">Columns</option>
			</field>

			<field name="column_style" type="list" showon="row_style:column" default="grid" label="COM_EB_LAYOUT_COLUMN_STYLE" description="COM_EB_LAYOUT_COLUMN_STYLE_DESC">
				<option value="column">Grid Layout</option>
				<option value="masonry">Masonry Layout</option>
			</field>

			<field name="card_column" showon="row_style:column" type="columns" default="3" label="COM_EB_FRONTPAGE_CARD_LAYOUT_COLUMN" description="COM_EB_FRONTPAGE_CARD_LAYOUT_COLUMN_DESC" />

			<field name="layout_style" type="poststyle" default="default" label="COM_EB_POST_STYLE" description="COM_EB_POST_STYLE_DESC" />

			<field name="row_divider" type="radio" showon="row_style:row" default="1" class="btn-group" label="COM_EB_POST_DIVIDER" description="COM_EB_POST_DIVIDER_DESC">
				<option value="0">COM_EASYBLOG_NO</option>
				<option value="1">COM_EASYBLOG_YES</option>
			</field>

			<field type="pagination" name="limit" default="-2" label="COM_EASYBLOG_ITEMS_PER_PAGE" description="COM_EASYBLOG_ITEMS_PER_PAGE_DESC" />
		</fieldset>
	</fields>		
</metadata>
