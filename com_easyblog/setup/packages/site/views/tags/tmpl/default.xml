				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="tag_sorting" config="tags_tag_sorting" type="dropdownglobal" default="1" label="COM_EASYBLOG_SHOW_SORTING" description="COM_EASYBLOG_SHOW_SORTING_DESC">
