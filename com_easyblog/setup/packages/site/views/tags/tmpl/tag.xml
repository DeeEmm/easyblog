				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
				<option value="6">6</option>
			</field>

			<field name="layout_postorder" config="layout_postorder" type="dropdownglobal" configtype="list" default="-1" label="COM_EASYBLOG_SETTINGS_LAYOUT_POSTS_ORDERING" description="COM_EASYBLOG_SETTINGS_LAYOUT_POSTS_ORDERING_DESC">
				<option value="modified">COM_EASYBLOG_SETTINGS_LAYOUT_POSTS_ORDERING_OPTIONS_LAST_MODIFIED</option>
