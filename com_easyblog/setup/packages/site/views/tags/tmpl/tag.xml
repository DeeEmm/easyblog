			<field name="post_nickel_column" config="tag_post_nickel_column" type="dropdownglobal" configtype="list" default="-1" label="COM_EASYBLOG_NICKEL_COLUMN" description="COM_EASYBLOG_NICKEL_COLUMN_DESC">
