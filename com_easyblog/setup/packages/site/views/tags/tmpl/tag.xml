				<option value="asc">COM_EASYBLOG_SETTINGS_LAYOUT_POSTS_SORTING_OPTIONS_ASCENDING</option>
			</field>
		</fieldset>

		<fieldset name="post" label="COM_EASYBLOG_MENU_POST_OPTIONS" info="COM_EASYBLOG_MENU_TAG_POST_OPTIONS_INFO" id="post" addfieldpath="/administrator/components/com_easyblog/elements">
			<field type="pagination" name="tag_posts_limit" default="-1" label="COM_EB_POSTS_PER_PAGE" description="COM_EB_POSTS_PER_PAGE_DESC" />

			<field name="post_image" config="tag_post_image" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_IMAGE" description="COM_EASYBLOG_SHOW_POST_IMAGE_DESC">
