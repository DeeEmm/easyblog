<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_EASYBLOG_MENU_TAG_LAYOUT">
		<message>
			<![CDATA[COM_EASYBLOG_MENU_TAG_LAYOUT_DESC]]>
		</message>
		<view>tags</view>
	</layout>

	<fields name="request">
		<fieldset name="request" addfieldpath="/administrator/components/com_easyblog/elements">
			<field name="id" type="tags" label="COM_EASYBLOG_MENU_SELECT_TAG" required="true" description="COM_EASYBLOG_MENU_SELECT_TAG_DESC" />
		</fieldset>
	</fields>

	<fields name="params">
		<fieldset name="request" addfieldpath="/administrator/components/com_easyblog/elements" id="general" label="COM_EB_MENU_GENERAL">
			<field name="row_style" config="tag_row_style" type="dropdownglobal" configtype="list" default="-1" label="EB_POST_LISTING_STYLE" description="EB_POST_LISTING_STYLE_DESC">
				<option value="row">Rows</option>
				<option value="column">Columns</option>
			</field>

			<field name="column_style" config="tag_column_style" type="dropdownglobal" configtype="list" showon="row_style:column" default="-1" label="COM_EB_LAYOUT_COLUMN_STYLE" description="COM_EB_LAYOUT_COLUMN_STYLE_DESC">
				<option value="column">Grid Layout</option>
				<option value="masonry">Masonry Layout</option>
			</field>

			<field name="card_column" config="tag_card_column" useglobal="1" showon="row_style:column" type="columns" default="-1" label="COM_EB_FRONTPAGE_CARD_LAYOUT_COLUMN" description="COM_EB_FRONTPAGE_CARD_LAYOUT_COLUMN_DESC" />

			<field name="layout_style" type="poststyle" default="default" label="COM_EB_POST_STYLE" description="COM_EB_POST_STYLE_DESC" />

			<field name="row_divider" type="radio" showon="row_style:row" config="tag_row_divider" default="1" class="btn-group" label="COM_EB_POST_DIVIDER" description="COM_EB_POST_DIVIDER_DESC">
