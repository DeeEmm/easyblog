<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_EASYBLOG_MENU_BLOGGER_LAYOUT">
		<message>
			<![CDATA[COM_EASYBLOG_MENU_BLOGGER_LAYOUT_DESC]]>
		</message>
		<view>blogger</view>
	</layout>

	<fields name="request">
		<fieldset name="request" addfieldpath="/administrator/components/com_easyblog/elements">
			<field name="id" type="authors" label="COM_EASYBLOG_MENU_AUTHOR" description="COM_EASYBLOG_MENU_AUTHOR_DESC" required="true" />
		</fieldset>
	</fields>

	<fields name="params">
		<fieldset name="request" id="general" addfieldpath="/administrator/components/com_easyblog/elements" label="COM_EB_MENU_GENERAL">
			<field name="exclusion" type="multicategories" globals="0" label="COM_EASYBLOG_MENU_EXCLUDE_SELECT_CATEGORIES" description="COM_EASYBLOG_MENU_EXCLUDE_SELECT_CATEGORIES_DESC" />
			<field name="row_style" config="blogger_row_style" type="dropdownglobal" configtype="list" default="-1" label="EB_POST_LISTING_STYLE" description="EB_POST_LISTING_STYLE_DESC">
				<option value="row">Rows</option>
				<option value="column">Columns</option>
			</field>

			<field name="column_style" config="blogger_column_style" type="dropdownglobal" configtype="list" showon="row_style:column" default="-1" label="COM_EB_LAYOUT_COLUMN_STYLE" description="COM_EB_LAYOUT_COLUMN_STYLE_DESC">
				<option value="column">Grid Layout</option>
				<option value="masonry">Masonry Layout</option>
			</field>

			<field name="card_column" config="blogger_card_column" useglobal="1" showon="row_style:column" type="columns" default="-1" label="COM_EB_FRONTPAGE_CARD_LAYOUT_COLUMN" description="COM_EB_FRONTPAGE_CARD_LAYOUT_COLUMN_DESC" />

			<field name="layout_style" config="blogger_layout_style" type="poststyle" useglobal="1" default="-1" label="COM_EB_POST_STYLE" description="COM_EB_POST_STYLE_DESC" />

			<field name="row_divider" type="radio" showon="row_style:row" config="blogger_row_divider" default="1" class="btn-group" label="COM_EB_POST_DIVIDER" description="COM_EB_POST_DIVIDER_DESC">
				<option value="0">COM_EASYBLOG_NO</option>
				<option value="1">COM_EASYBLOG_YES</option>
			</field>

			<field name="author_header" config="blogger_author_header" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_AUTHOR_HEADER" description="COM_EASYBLOG_SHOW_AUTHOR_HEADER_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="author_avatar" config="blogger_author_avatar" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_AUTHOR_AVATAR" description="COM_EASYBLOG_SHOW_AUTHOR_AVATAR_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="author_name" config="blogger_author_name" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_AUTHOR_NAME" description="COM_EASYBLOG_SHOW_AUTHOR_NAME_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="author_bio" config="blogger_author_bio" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_AUTHOR_BIO" description="COM_EASYBLOG_SHOW_AUTHOR_BIO_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="author_twitter" config="blogger_author_twitter" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_AUTHOR_TWITTER" description="COM_EASYBLOG_SHOW_AUTHOR_TWITTER_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="author_website" config="blogger_author_website" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_AUTHOR_WEBSITE" description="COM_EASYBLOG_SHOW_AUTHOR_WEBSITE_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="author_truncate_bio" config="blogger_author_truncate_bio" type="dropdownglobal" default="-1" label="COM_EB_ENABLE_BIO_TRUNCATION" description="COM_EB_ENABLE_BIO_TRUNCATION_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field name="post_nickel_column" config="blogger_post_nickel_column" type="dropdownglobal" configtype="list" default="-1" label="COM_EASYBLOG_NICKEL_COLUMN" description="COM_EASYBLOG_NICKEL_COLUMN_DESC">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
				<option value="6">6</option>
			</field>
		</fieldset>

		<fieldset name="post" label="COM_EASYBLOG_MENU_POST_OPTIONS" info="COM_EASYBLOG_MENU_AUTHOR_POST_OPTIONS_INFO" id="post">
			<field type="pagination" name="author_posts_limit" default="-1" label="COM_EB_POSTS_PER_PAGE" description="COM_EB_POSTS_PER_PAGE_DESC" />

			<field name="post_image" config="blogger_post_image" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_IMAGE" description="COM_EASYBLOG_SHOW_POST_IMAGE_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_image_placeholder" config="blogger_post_image_placeholder" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_IMAGE_PLACEHOLDER" description="COM_EASYBLOG_SHOW_POST_IMAGE_PLACEHOLDER_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_title" config="blogger_post_title" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_TITLE" description="COM_EASYBLOG_SHOW_POST_TITLE_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_category" config="blogger_post_category" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_CATEGORY" description="COM_EASYBLOG_SHOW_POST_CATEGORY_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_hits" config="blogger_post_hits" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_HITS" description="COM_EASYBLOG_SHOW_POST_HITS_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_date" config="blogger_post_date" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_DATE" description="COM_EASYBLOG_SHOW_POST_DATE_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_date_source" config="blogger_post_date_source" type="dropdownglobal" configtype="list" default="-1" label="COM_EASYBLOG_POST_DATE_SOURCE" description="COM_EASYBLOG_POST_DATE_SOURCE_DESC">
				<option value="created">COM_EASYBLOG_POST_DATE_SOURCE_CREATION</option>
				<option value="modified">COM_EASYBLOG_POST_DATE_SOURCE_MODIFIED</option>
				<option value="publish_up">COM_EASYBLOG_POST_DATE_SOURCE_PUBLISHING</option>
			</field>

			<field name="post_ratings" config="blogger_post_ratings" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_RATINGS" description="COM_EASYBLOG_SHOW_POST_RATINGS_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_comment_counter" config="blogger_post_comment_counter" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_COMMENT_COUNTER" description="COM_EASYBLOG_SHOW_COMMENT_COUNTER_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_copyrights" config="blogger_post_copyrights" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_COPYRIGHTS" description="COM_EASYBLOG_SHOW_POST_COPYRIGHTS_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_author" config="blogger_post_author" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_AUTHOR" description="COM_EASYBLOG_SHOW_POST_AUTHOR_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_author_avatar" config="blogger_post_author_avatar" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_AUTHOR_AVATAR" description="COM_EASYBLOG_SHOW_POST_AUTHOR_AVATAR_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_tags" config="blogger_post_tags" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_TAGS" description="COM_EASYBLOG_SHOW_POST_TAGS_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_type" config="blogger_post_type" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_POST_TYPE" description="COM_EASYBLOG_SHOW_POST_TYPE_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_social_buttons" config="blogger_post_social_buttons" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_SOCIAL_BUTTONS" description="COM_EASYBLOG_SHOW_SOCIAL_BUTTONS_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="post_readmore" config="blogger_post_readmore" type="dropdownglobal" default="-1" label="COM_EASYBLOG_SHOW_READMORE" description="COM_EASYBLOG_SHOW_READMORE_DESC">
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>

	</fields>
</metadata>
